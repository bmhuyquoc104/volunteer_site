<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="255dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary2"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/participant_role"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="@string/role"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participant_leader"
            android:layout_width="322dp"
            android:layout_height="41dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="@string/leader"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participant_userList"
            android:layout_width="344dp"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:text="@string/listOfUsers"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participant_site"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:text="@string/site"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participant_type"
            android:layout_width="136dp"
            android:layout_height="53dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:text="@string/locationType"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participant_status"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="220dp"
            android:text="@string/status"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>